extends layouts/main-layout.pug

block content
    main
        .grid
            if prods.length > 0
                each product in prods       
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image    
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPam_oXbEvFlA2Oew7RcDAZb1akz74YlOXeA&s", alt="Book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about topic 
                        .card__actions 
                            button.btn Add to Cart
            else 
                h1 No Products